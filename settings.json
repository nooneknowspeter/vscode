    "terminal.ansiBrightCyan": "#aaaaaa",
    "terminal.ansiBrightGreen": "#7799bb",
    "terminal.ansiBrightMagenta": "#999999",
    "terminal.ansiBrightRed": "#5f8787",
    "terminal.ansiBrightWhite": "#c1c1c1",
    "terminal.ansiBrightYellow": "#556677",
    "terminal.selectionBackground": "#c1c1c1",
    "terminalCursor.background": "#c1c1c1",
    "terminalCursor.foreground": "#c1c1c1"
