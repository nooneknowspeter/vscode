    {
      "before": ["j", "k"],
      "after": ["<esc>"]
    }
  ],
  "remote.SSH.remotePlatform": {
    "*.gitpod.io": "linux",
    "freecodecam-boilerplate-jqbl5953xu3.vss.gitpod.io": "linux",
    "freecodecam-boilerplate-raml9yispc0.ssh.ws-us118.gitpod.io": "linux",
    "freecodecam-boilerplate-raml9yispc0.vss.gitpod.io": "linux"
  },
  "security.allowedUNCHosts": ["wsl.localhost"],
  "remote.SSH.defaultExtensions": ["gitpod.gitpod-remote-ssh"],
  "dev.containers.defaultExtensions": ["gitpod.gitpod-remote-ssh"],
